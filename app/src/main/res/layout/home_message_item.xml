<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

    <com.google.android.material.card.MaterialCardView app:cardCornerRadius="15dp"
        android:layout_marginHorizontal="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#030B25">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_margin="20dp"
                android:id="@+id/profile_dp"
                android:background="@color/white"
                android:layout_width="50dp"
                android:layout_height="50dp"/>
            <TextView
                android:layout_marginHorizontal="10dp"
                android:id="@+id/contactName"
                app:layout_constraintStart_toEndOf="@id/profile_dp"
                app:layout_constraintTop_toTopOf="@id/profile_dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:text="Vinay"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:textColor="#B2FFFFFF"
                android:layout_marginHorizontal="12dp"
                android:maxLines="1"
                android:text="hay how are you doing, laaaaaaaaaaaaaaaaaab"
                app:layout_constraintTop_toBottomOf="@id/contactName"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/profile_dp"
                android:layout_width="0dp"
                app:layout_constraintBottom_toBottomOf="@id/profile_dp"
                android:layout_height="wrap_content"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
    </LinearLayout>

</layout>